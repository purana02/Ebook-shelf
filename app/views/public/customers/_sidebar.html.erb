<div class="mt-3 mb-2">
  <table class="table table-borderless table-hover text-center">
    <thead class="table-active">
      <tr>
        <th class="h5 font-weight-bold rounded-pill">
          <%= current_customer.nickname %>さん
        </th>
      </tr>
    </thead>
    <tbody class="side">
      <% if current_customer.nickname != "guestuser" %>
      <tr>
        <td class="rounded-pill"><%= link_to '会員情報編集', edit_customer_path, class: "text-dark" %></td>
      </tr>
      <% end %>
      <tr>
        <td class="rounded-pill">
          <%= link_to customer_path, class: "text-dark" do %>
            <i class="fas fa-book"></i>My Comics
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="rounded-pill"><%= link_to '課金一覧', customer_billings_path, class: "text-dark" %></td>
      </tr>
      <tr>
        <td class="rounded-pill">
          <%= link_to customer_favorites_path, class: "text-dark" do %>
            <i class="fas fa-bookmark"></i>お気に入り一覧
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>