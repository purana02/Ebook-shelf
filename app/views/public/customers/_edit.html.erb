<%= render 'layouts/errors', obj: customer %>
<div class="row justify-content-lg-center">
  <div class="col-lg-12">
    <%= form_with model: customer do |f| %>
    <div class="form-group row mt-3">
      <label for="nickname" class="col-sm-3 col-form-label">ニックネーム</label>
      <div class="col-5">
        <%= f.text_field :nickname, class: "form-control form-control-sm border-dark" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
      <div class="col-5">
          <%= f.email_field :email, class: "form-control form-control-sm border-dark" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-8 col-sm-8">
        <div class="d-grid gap-2 d-md-block text-center mt-3">
          <%= f.submit "編集内容を保存", class: 'btn btn-success col-4' %>
          <%= link_to "退会する", confirm_deleted_customer_path, class: 'btn btn-danger col-4 offset-1' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>