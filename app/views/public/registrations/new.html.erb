<div class="container">
  <div class="row">
    <h3 class="col-lg-auto bg-light text-center">新規会員登録</h3>
  </div>

  <div class="row justify-content-lg-center">
    <div class="col-lg-12">
    <%= render "public/shared/error_messages", resource: resource %>
    <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
      <div class="form-group row">
        <label for="nickname" class="col-sm-3 col-form-label">ニックネーム</label>
        <div class="col-3">
          <%= f.text_field :nickname, placeholder: "レビュー投稿時に使われます", autofocus: true, class: "form-control form-control-sm border-dark" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
        <div class="col-3">
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="password" class="col-sm-3 col-form-label">パスワード（6文字以上）</label>
        <div class="col-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="password" class="col-sm-3 col-form-label">パスワード（確認用）</label>
        <div class="col-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class=" col-lg-4 col-md-offset-5 form-group text-center">
          <%= f.submit "　新規登録　", class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
    <h6 class="col-lg-auto bg-light text-center">会員の方はこちらから<%= link_to "ログイン", customer_session_path, class:"login" %>してください</h6>
  </div>
  <div class="row">
    <h6 class="col-lg-auto bg-light text-center">こちらから<%= link_to "ゲストログイン", customers_guest_sign_in_path, method: :post, class:"guest" %>もできます</h6>
  </div>

</div>