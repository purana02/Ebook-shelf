<div class="text-center mt-3 mb-5">
    <span class="h3 border-bottom border-dark mt-2 mb-2"><strong><%= site.name %>一覧</strong></span>
    <span class="h5"> (全<%= comics_each.count %>件)</span>
</div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>平均</th>
      <th>レビュー数</th>
    </tr>
  </thead>
  <tbody>
    <% comics_each.each do |comic| %>
    <tr>
      <td>
        <%= link_to comic_path(comic.comic.id) do %>
        <%= comic.comic.title %>
        <% end %>
      </td>
      <td><!--%= render 'public/reviews/average_star', comic: comic %--></td>
      <td><%= comic.comic.reviews.count %>件</td>
    </tr>
    <% end %>
  </tbody>
</table>