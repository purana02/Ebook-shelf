<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/customers/sidebar' %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <div class="text-center mt-3 mb-5">
        <span class="h3 border-bottom border-dark mt-3 mb-2"><strong>課金一覧</strong></span>
        <span class="h6">
          <%= link_to new_customer_billing_path do %>
            <i class="fas fa-plus-circle fa-2x" style="color: #4d3233;"></i>
          <% end %>
        </span>
      </div>
      <%= render "sort_form" %>
      <%= render 'index', billings: @billings %>
      <div class="text-center mt-3 mb-5">
        <%= paginate @billings %>
      </div>
    </div>
  </div>
</div>