<div class="text-center mt-3 mb-5">
  <% if params[:genre_id] %>
    <span class="h3 border-bottom border-dark mt-2 mb-2"><strong><%= @genre.name %>一覧</strong></span>
    <span class="h5"> (全<%= @comics_all.count %>件)</span>
  <% elsif params[:site_id] %>
    <span class="h3 border-bottom border-dark mt-2 mb-2"><strong><%= @site.name %></strong></span>
    <span class="h5">(全<%= @comics_all.count %>件)</span>
  <% else %>
    <span class="h3 border-bottom border-dark mt-2 mb-2"><strong>商品一覧</strong></span>
    <span class="h5"> (全<%= @comics_all.count %>件)</span>
  <% end %>
</div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>平均</th>
      <th>レビュー数</th>
    </tr>
  </thead>
  <tbody>
    <% comics.each do |comic| %>
    <tr>
      <td><%= comic.name %></td>
      <td><%= render 'public/reviews/average_star', comic: comic %></td>
      <td><%= comic.review.count %></td>
    </tr>
  </tbody>
</table>