<div class="row justify-content-lg-center">
  <%= form_with url: comics_path, method: :get, local: true do |f| %>
  <form>
    <div class="form-group row">
      <%= f.select :sort, sort_list, { include_blank: "--選択してください--" } %>
      <%= f.submit "並べ替え", class:"btn btn-sm btn-outline-primary" %>
    </div>
  </form>
  <% end %>
</div>