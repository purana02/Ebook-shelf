<table class='table table-hover table-inverse mt-3'>
  <thead>
    <tr>
      <th>投稿日</th>
      <th>投稿者</th>
      <th>コミックタイトル</th>
      <th>星</th>
      <th>ネタバレ</th>
    </tr>
  </thead>
  <tbody>
    <% reviews.each do |review| %>
    <tr>
      <td>
        <%= link_to comic_path(review.comic_id) do %>
          <%= review.created_at.strftime('%Y/%m/%d') %>
        <% end %>
      </td>
      <td><%= review.customer.nickname %></td>
      <td><%= review.comic.title %></td>
      <td><i class="fas fa-star" aria-hidden="true" style="color: #E4BC7F;"></i><%= review.evaluation %></td>
      <td>
        <% if review.exists_spoiler == true %>
          <div class="spoiler-true"><%= "あり" %></div>
        <% else %>
          <div class="spoiler-false"><%= "なし" %></div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>