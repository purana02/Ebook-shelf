<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'admin/genres/sidebar', genres: @genres %>
      <%= render 'admin/sites/sidebar', sites: @sites %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <h3 class="bg-side col-4 text-center"><strong>コミック詳細</strong></h3>
      <div class="row">
        <h4 class="mt-2 mr-2"><strong>タイトル : <%= @comic.title %></strong></h4>
      </div>
      <div class="row mt-3">
        <h5 class="mr-3 mt-1">お気に入り登録数：<%= @comic.favorites.count %>件</h5>
      </div>
      <div class="row mt-4">
        <div class="col-md-4 offset-md-1" >
          <%= render 'public/reviews/star', comic: @comic %>
        </div>
        <div class="col-md-4 offset-md-1" >
          <%= render 'public/comics/tags', tags: @tags %>
          <%= render 'public/comics/site', each_sites: @each_sites%>
        </div>
      </div>
      <div class="row mt-2">
        <h2 class="bg-side  text-center col-4"><strong>みんなの感想</strong></h2>
      </div>
      <div class="row mt-2">
         <%= render 'review', reviews: @reviews %>
      </div>
      <div class="text-center mt-3 mb-5">
        <%= paginate @reviews %>
      </div>
    </div>
  </div>
</div>