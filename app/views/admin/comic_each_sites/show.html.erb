<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/genres/sidebar', genres: @genres %>
      <%= render 'public/sites/sidebar', sites: @sites %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <h2>Comics</h2>
      <%= render 'index', {comics_each: @comics_each, site: @site } %>
      <div class="text-center mt-3 mb-5">
        <%= paginate @comic_each %>
      </div>
    </div>
  </div>
</div>